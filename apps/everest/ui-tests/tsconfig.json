{
  "include": ["./**/*.e2e.*"],
  "compilerOptions": {
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/hooks/*": ["../src/hooks/*"],
      "@/contexts/*": ["../src/contexts/*"],
      "@/components/*": ["../src/components/*"],
      "@/pages/*": ["../src/pages/*"],
      "@/types/*": ["../src/types/*"],
      "@/utils/*": ["../src/utils/*"],
      "@/constants": ["../src/constants.ts"],
      "@/api/*": ["../src/api/*"],
      "@percona/ui-lib": ["../../../packages/ui-lib/src"],
      "@percona/design": ["../../../packages/design/src"],
      "@percona/types": ["../../../packages/types/src"],
      "@percona/utils": ["../../../packages/utils/src"],
    },
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "target": "ES2020",
    "module": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "../tests-out",
  }
}